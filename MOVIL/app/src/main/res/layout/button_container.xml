<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardLayout"
    android:orientation="horizontal"
    android:layout_gravity="bottom">

    <Button
        android:id="@+id/btnLike"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/like_green_24dp" />

    <Button
        android:id="@+id/btnRewind"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rewind_blue_24dp" />

    <Button
        android:id="@+id/btnDislike"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:background="@drawable/skip_red_24dp" />

    <Button
        android:id="@+id/btnNuevo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/guardar_icon"
        android:onClick="mostrarVentanaSeleccionPlaylist" />
</LinearLayout>